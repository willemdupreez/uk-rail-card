{
  "name": "uk-rail-card",
  "version": "0.2.56",
  "description": "Custom Lovelace card for UK rail service boards.",
  "license": "MIT",
  "type": "module",
  "main": "dist/uk-rail-card.js",
  "scripts": {
    "bump": "npm version --no-git-tag-version patch",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "publish": "git add . && git commit -am \"${npm_config_comment:-default}\" && git tag \"v$npm_package_version\" && git push --tags",
    "release": "gh release create \"v$npm_package_version\" --generate-notes"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^4.56.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}